<div id= 'create_user'>
<%= form_for @user do |f| %>
	<a id= 'full_name_create'><%= f.label :full_name %></a><br>
	<a><%= f.text_field :full_name %></a><br>
	<br>
	<a id= 'username_create'><%= f.label :username %></a><br>
	<a><%= f.text_field :username %></a><br>
	<br>
	<a id= 'password_create'><%= f.label :password %></a><br>
	<a><%= f.password_field :password %></a><br>
	<br>
	<a id= 'password_confirmation_create'><%= f.label :password_confirmation %></a><br>
	<a><%= f.password_field :password_confirmation %></a><br>
	<br>
	<%= f.submit %>
<% end %>	
</div>